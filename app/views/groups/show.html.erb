<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
        <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group Details</h2>
        <table class="table">
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th></th>
          </tr>
          <tr>
            <td><%= image_tag @group.get_group_image, size: '60x60' %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |member| %>
                <%= member.name %>
              <% end %>
            </td>
            <% if @group.is_owned_by?(current_user) %>
              <td><%= link_to 'Edit', edit_group_path(@group.id), class:"btn btn-success" %></td>
              <td><%= link_to 'Notice an Event', group_new_mail_path(@group), class:"btn btn-info" %></td>
            <% elsif @group.users.include?(current_user) %>
              <td><%= link_to 'Leave this group', group_path(@group), method: :delete, class:"btn btn-danger" %></td>
            <% else %>
              <td><%= link_to 'Join this group', group_join_path(@group), class:"btn btn-info" %></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>
