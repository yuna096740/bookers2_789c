<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-5 mx-auto my-5">
      <h4>Event Mail To :<%= @group.name %></h4>
      <%= form_with url: group_send_mail_path(@group), method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :mail_title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :mail_content, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit '送信', class:"btn btn-info form-control" %>
        </div>
      <% end %>
    </div>
  </div>
</div>