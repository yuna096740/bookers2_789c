<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-5 mx-auto my-5">
      <h4>Create Group</h4>
        <%= form_with model: @group do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :group_image %>
          </div>
          <div class="form-group">
            <%= f.submit class:"btn btn-info form-control" %>
          </div>
        <% end %>
    </div>
  </div>
</div>